<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Model.Driver" table="driver">
        <meta attribute="class-description">Customer table link</meta>
        <id name="id" type="integer" column="id">
            <generator class="native"/>
        </id>
        <property name="email" column="email" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="name" column="name" type="string"/>
        <property name="surname" column="surname" type="string"/>
        <property name="phoneNumber" column="phoneNumber" type="int"/>
        <property name="birthDate" column="birthDate" type="date"/>
        <property name="employmentDate" column="employmentDate" type="date"/>
        <property name="completedTrips" column="completedTrips" type="int"/>
    </class>
</hibernate-mapping>
